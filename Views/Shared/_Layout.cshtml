@{
    ViewData["Title"] = "Home";
    var role = Context.Session.GetString("Role") ?? "Guest";
    var studentId = Context.Session.GetInt32("StudentId") ?? 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Information Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SIMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    @if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminDashboard", "User")">User Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageCourses", "Courses")">Course Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Record")">Record Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageClass", "Class")">Class Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageTimetable", "Timetable")">Timetable Management</a>
                        </li>
                    }
                    else if (role == "Teacher")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DashboardTeacher", "User")">Teacher Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Record")">Record Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageCourses", "Courses")">Manage Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageClass", "Class")">Class Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageGrade", "Grade")">Manage Grade</a>
                        </li>
                    }
                    else if (role == "Student")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DashboardStudent", "User")">Student Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ViewCourses", "Courses")">My Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ViewRecords", "Record", new { studentId = studentId })">My Records</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ViewGrade", "Grade")">My Grade</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ViewTimetable", "Timetable")">My Timetable</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ViewClass", "Class")">My Classes</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="nav-link text-light">Role: @role</span>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light" href="@Url.Action("Logout", "Auth")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()  
    </div>

    <footer class="text-center py-4">
        <p>&copy; 2024 SIMS</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>
</html>