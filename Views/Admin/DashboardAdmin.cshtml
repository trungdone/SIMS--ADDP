@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<SIMS_App.Models.User>

<style>
    /* Định dạng chung */
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #f4f6f9;
    }

    /* Container chính */
    .container {
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Tiêu đề */
    h2, h4 {
        color: #343a40;
        font-weight: bold;
    }

    /* Bố cục tiêu đề và nút */
    .header-container {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    /* Căn chỉnh bảng */
    .table-responsive {
        border-radius: 10px;
        overflow: hidden;
    }

    .table thead {
        background-color: #343a40;
        color: #ffffff;
    }

    .table tbody tr {
        transition: all 0.3s ease-in-out;
    }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

    /* Định dạng cột */
    th, td {
        padding: 10px;
        text-align: left;
    }

        th:nth-child(1), td:nth-child(1) {
            width: 10%;
        }
        /* ID */
        th:nth-child(2), td:nth-child(2) {
            width: 20%;
        }
        /* Name */
        th:nth-child(3), td:nth-child(3) {
            width: 25%;
        }
        /* Email */
        th:nth-child(4), td:nth-child(4) {
            width: 15%;
        }
        /* Phone */
        th:nth-child(5), td:nth-child(5) {
            width: 15%;
            text-align: center;
        }
        /* DOB */
        th:nth-child(6), td:nth-child(6) {
            width: 15%;
            text-align: center;
        }
    /* Actions */

    /* Nút */
    .btn {
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

    .btn-success {
        background: #28a745;
        border: none;
    }

        .btn-success:hover {
            background: #218838;
        }

    .btn-primary {
        background: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .btn-danger {
        background: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background: #bd2130;
        }

    /* Căn chỉnh nút trong bảng */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 5px;
    }

    /* Điều chỉnh viền của bảng */
    .table {
        border: none;
    }

    /* Loại bỏ viền của container */
    .container {
        box-shadow: none;
    }

    /* Đảm bảo các nút không tràn ra ngoài */
    th:nth-child(6), td:nth-child(6) {
        width: 15%;
        text-align: center;
        white-space: nowrap; /* Ngăn xuống dòng */
    }

    /* Căn chỉnh nút trong bảng */
    .action-buttons {
        display: flex;
        justify-content: center; /* Canh giữa */
        align-items: center;
        gap: 5px; /* Khoảng cách giữa các nút */
    }

        /* Giới hạn kích thước nút */
        .action-buttons a {
            padding: 5px 10px;
            font-size: 14px;
            display: inline-block;
            width: 70px; /* Giữ kích thước nút đồng nhất */
            text-align: center;
        }

</style>


<div class="container">
    <h2>Student Management</h2>
    <button class="btn btn-primary mb-3" onclick="showAddUserForm()">Add User</button>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Date of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTable"></tbody>
        </table>
    </div>
</div>

<!-- Form thêm/sửa User -->
<div id="userFormModal" class="modal" style="display:none;">
    <div class="modal-content">
        <h4 id="formTitle">Add User</h4>
        <input type="hidden" id="userId">
        <label>Name:</label>
        <input type="text" id="userName" class="form-control">
        <label>Email:</label>
        <input type="text" id="userEmail" class="form-control">
        <label>Phone:</label>
        <input type="text" id="userPhone" class="form-control">
        <label>Date of Birth:</label>
        <input type="date" id="userDob" class="form-control">
        <button onclick="saveUser()" class="btn btn-success mt-2">Save</button>
        <button onclick="closeModal()" class="btn btn-secondary mt-2">Cancel</button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        loadUsers();
    });

    function loadUsers() {
        $.get("/User/GetUsers", function (data) {
            if (data.success) {
                let rows = "";
                data.users.forEach(user => {
                    rows += `<tr>
                            <td>${user.id}</td>
                            <td>${user.name}</td>
                            <td>${user.email}</td>
                            <td>${user.phone}</td>
                            <td>${user.dateOfBirth}</td>
                            <td>
                                <button class="btn btn-warning" onclick="editUser(${user.id}, '${user.name}', '${user.email}', '${user.phone}', '${user.dateOfBirth}')">Edit</button>
                                <button class="btn btn-danger" onclick="deleteUser(${user.id})">Delete</button>
                            </td>
                        </tr>`;
                });
                $("#userTable").html(rows);
            }
        });
    }

    function showAddUserForm() {
        $("#formTitle").text("Add User");
        $("#userId").val("");
        $("#userName").val("");
        $("#userEmail").val("");
        $("#userPhone").val("");
        $("#userDob").val("");
        $("#userFormModal").show();
    }

    function editUser(id, name, email, phone, dob) {
        $("#formTitle").text("Edit User");
        $("#userId").val(id);
        $("#userName").val(name);
        $("#userEmail").val(email);
        $("#userPhone").val(phone);
        $("#userDob").val(dob);
        $("#userFormModal").show();
    }

    function saveUser() {
        const user = {
            id: $("#userId").val() || 0,  // Mặc định id = 0 nếu thêm mới
            name: $("#userName").val(),
            email: $("#userEmail").val(),
            phone: $("#userPhone").val(),
            dateOfBirth: $("#userDob").val()
        };

        $.ajax({
            url: user.id ? "/User/UpdateUser" : "/User/AddUser",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(user),
            success: function (response) {
                if (response.success) {
                    alert(response.message); // Hiển thị thông báo
                    loadUsers(); // Tải lại danh sách
                    closeModal();
                } else {
                    alert("Failed to save user!");
                }
            },
            error: function () {
                alert("Error while saving user!");
            }
        });
    }

    function deleteUser(id) {
        if (!confirm("Are you sure you want to delete this user?")) return;

        $.ajax({
            url: "/User/DeleteUser",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify({ id: id }),
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    loadUsers();
                } else {
                    alert("Failed to delete user!");
                }
            },
            error: function () {
                alert("Error while deleting user!");
            }
        });
    }

    function closeModal() {
        $("#userFormModal").hide();
    }

    $.ajax({
        url: user.id ? "/User/UpdateUser" : "/User/AddUser",
        type: "POST",
        contentType: "application/json",
        data: JSON.stringify(user),
        success: function () {
            loadUsers();
            closeModal();
        }
    });

</script>

